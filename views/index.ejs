<html>

<head>
  <meta charset="utf-8">
  <title>Test</title>
  <link rel="stylesheet" type="text/css" href="/css/style.css">
  <link href='https://fonts.googleapis.com/css?family=Open+Sans:300' rel='stylesheet' type='text/css'>
</head>

<body>
  <div class="container">
    <fieldset>
      <form action="/" method="post">
        <input name="actor" type="text" class="ghost-input" placeholder="Actor/Actress" required>
        <input type="submit" class="ghost-button" value="Search">
      </form>

      <% if(showTitle !== null){ %>
        <p>
          <h5>Searched For</h5>
          <%= searchFor  %>
        </p>
        <p>
          <h5>Stars In..</h5>
          <%= showTitle %>
        </p>
        <p>
          <h5>Movie/Show Ratings</h5>
          <%= rating %>
        </p>
        <p>
          <h5>Average Rating</h5>
          <%= avg %>
        </p>
        <% } %>

    </fieldset>
  </div>
  <script type="text/javascript" src="script/controller.js"></script>
</body>

</html>
